<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:padding="@dimen/layout_margin"
    android:background="@color/colorBackground"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="250dp"
            android:layout_gravity="center_horizontal"
            android:layout_height="250dp">
        <TextView
            android:layout_width="250dp"
            tools:text="2.5"
            android:background="@drawable/circle_background_for_mag"
            android:textSize="100sp"
            android:shadowColor="#000000"
            android:shadowDx="0"
            android:shadowDy="0"
            android:shadowRadius="30"
            android:textColor="#ffffff"
            android:gravity="center"
            android:id="@+id/mag_text_view"
            android:layout_gravity="center_horizontal"
            android:layout_height="250dp"/>

         <ProgressBar
             android:layout_width="wrap_content"
             android:id="@+id/progress_circular"
             android:layout_centerInParent="true"
             android:layout_height="wrap_content"/>
        </RelativeLayout>
        <TextView
            android:layout_width="wrap_content"
            tools:text="south kashmir near bridge"
            android:elevation="20dp"
            android:layout_gravity="center_horizontal"
            android:textAppearance="?android:textAppearanceLarge"
            android:textColor="#ffffff"
            android:id="@+id/place_text_view"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_width="wrap_content"
            android:textColor="#ffffff"
            tools:text="3:23AM 21:4:20"
            android:id="@+id/time"
            android:layout_gravity="center_horizontal"
            android:textAppearance="?android:textAppearanceMedium"
            android:fontFamily="sans-serif-condensed"
            android:layout_height="wrap_content"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="@dimen/relative_button_top_margin"
            android:layout_weight="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="match_parent"
                android:layout_alignParentBottom="true">

                <EditText
                    android:layout_width="match_parent"
                    android:textColor="#ffffff"
                    android:inputType="numberDecimal"
                    android:hint="Minimum Magnitude"
                    android:textColorHint="#ffffff"
                    android:padding="13dp"
                    android:drawableStart="@drawable/ic_round_arrow_forward_ios_24"
                    android:drawablePadding="8dp"
                    android:ems="10"
                    android:background="@drawable/background_for_edittext"
                    android:id="@+id/editText"
                    android:layout_margin="@dimen/margin_around_editText"
                    android:layout_height="wrap_content"/>

                <Button
                    android:layout_width="match_parent"
                    android:text="Shake"
                    android:textColor="#ffffff"
                    android:id="@+id/shake_button"
                    android:textSize="36dp"
                    android:background="@drawable/which_background_for_button"
                    android:fontFamily="sans-serif-condensed-light"
                    android:layout_height="0dp"
                    android:layout_weight="5"/>

            </LinearLayout>

        </RelativeLayout>

    </LinearLayout>



</RelativeLayout>